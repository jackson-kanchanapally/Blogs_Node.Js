<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blogs content">
        <h1>All Blogs</h1>
        <hr/>
        <% if(blogs.length>0) { %>
            <% blogs.map(blog=>{ %>
                <a class="single" href="/blogs/<%= blog._id %>">
                <h2><%= blog.title%></h2>
                <p><%=blog.snippet%></p>
            </a>
                <hr/>
            <%})%>
        <% } else {%>
            <h2 style="text-align: center; padding-top:160px;font-size:60px;">Nothing to Display</h2>
            <%}%>
    </div>
</body>
</html>